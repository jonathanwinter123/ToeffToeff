@using ToeffToeff.Persistence
@model List<PersistedModels>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css"/>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-default ">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="../Home/Index">TöffTöff</a>
        </div>
        <ul class="nav navbar-nav">
            <li><a href="../Home/Index">Home</a></li>
            <li><a href="../User/Create">Registieren</a></li>
        </ul>
    </div>
</nav>

    @{
        foreach (var item in Model)
        {
            <div class="brandbox">
                <img class="modelImg" src="@item.Picture" alt="No picture found for @item.Name @item.ModelSpecification"/>
                <p class="modelName">@item.Name @item.ModelSpecification</p>
                <p class="modellInfo">Marke: @item.PersistedBrands.Name</p>
                <p class="modellInfo">Preis: @item.Price.ToString("C")</p>
                @if (item.PersistedPersons.Count == 1)
                {
                <p class="modellInfo">Jemandem gefällt dieses Motorrad</p>
                }
                else if (item.PersistedPersons.Count == 0){
                <p class="modellInfo">Niemandem gefällt dieses Motorrad</p>
                }
                else
                {
                <p class="modellInfo">@item.PersistedPersons.Count Personen gefällt dieses Motorrad</p>
                }
            </div>
        }
    }
@if (Model.Count == 0)
{
    <h2>Es wurden keine Modelle dieses Herstellers gefunden.</h2>
}

</body>
</html>
