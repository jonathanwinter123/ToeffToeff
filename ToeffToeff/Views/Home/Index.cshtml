@using ToeffToeff.Persistence
@model List<PersistedBrands>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css"/>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default ">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">TöffTöff</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="../Home/Index">Home</a></li>
                <li><a href="../User/List">Benutzerübersicht</a></li>
                <li><a href="../User/Create">Registieren</a></li>
            </ul>
        </div>
    </nav>


@foreach (var item in Model)
{
    <div class="brandbox">
        <div class="brandImgContainer">
            <img class="brandImg" alt=@item.Name src="@item.Picture"/>
        </div>
        <div class="brandInfo">
            <p class="brandName">@item.Name</p>
            <p class="brandFoundingDate">Gegründet: @item.FoundingDate.ToShortDateString()</p>
            <p class="brandDescription">@item.Description</p>
            @Html.ActionLink("Modelle anschauen", "Index", "Model", new { BrandId = item.Id.ToString() }, new {@class="brandButtons"})
        </div>
    </div>
}
</body>
</html>
